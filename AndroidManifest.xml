<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.srsoftware.allergyscan"
    android:versionCode="1"
    android:versionName="1.16" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.srsoftware.allergyscan.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.zxing.client.android.CaptureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.zxing.client.android.SCAN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.srsoftware.allergyscan.CreateAllergenActivity"
            android:label="@string/title_activity_create_allergen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.srsoftware.allergyscan.MainActivity" />
        </activity>
        <activity
            android:name="com.srsoftware.allergyscan.AllergenSelectionActivity"
            android:label="@string/title_activity_allergen_selection" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.srsoftware.allergyscan.MainActivity" />
        </activity>
        <activity
            android:name="com.srsoftware.allergyscan.PreferencesActivity"
            android:label="@string/title_activity_preferences" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.srsoftware.allergyscan.MainActivity" />
        </activity>
        <activity
            android:name="com.srsoftware.allergyscan.LearningActivity"
            android:label="@string/title_activity_learning" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.srsoftware.allergyscan.MainActivity" />
        </activity>
        <activity
            android:name=".ScanActivity"
            android:label="@string/title_activity_scan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.srsoftware.allergyscan.MainActivity" />
        </activity>
        <activity
            android:name="com.srsoftware.allergyscan.InfoActivity"
            android:label="@string/title_activity_info" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.srsoftware.allergyscan.MainActivity" />
        </activity>
        <activity
            android:name="com.srsoftware.allergyscan.SynchronizeActivity"
            android:label="@string/title_activity_synchronize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.srsoftware.allergyscan.MainActivity" />
        </activity>
    </application>

</manifest>